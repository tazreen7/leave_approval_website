before_action:authenticate_user!

<h1> Associate </h1>

<%= form_for Associate.new,validate:true, url: associate_path do |f| %>
<% if @associate.errors.any? %>
<% @associate.errors.full_messages.each do |message| %>
  <li><%= error %></li>
  <% end%>
  <%end%>
 <%= f.label :associate_id %><br>
 <%= f.text_field :cerner_id  %><br>

<br>
<%= f.label :leave_type %><br>
<%= f.select :type_of_request, ["Work From Home","Vacation"]%><br>
<br>
   <%= f.label :Reason %><br>
   <%= f.text_field :leave_approval%><br>
<br>
   <%= f.label :start_date %><br>
   <%= f.date_field :start_date%><br>
<br>
   <%= f.label :end_date %><br>
   <%= f.date_field :end_date%><br>
<br>
<tr>
<td class="actions">
   <%= link_to("Show", "#", :class => 'action show')%>
    <%= link_to("Edit", "#", :class => 'action edit')%>
     <%= link_to("Delete", "#", :class => 'action delete') %>
   </td>
 </tr>
 <%= f.submit "Submit" %>
 <%= f.submit "Cancel" %>
 <%= link_to "logout", destroy_user_session_path, method: :delete %>

<% end %>
